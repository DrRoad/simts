year <- 2017
note <- "R package version 1.0"

citHeader("To cite simts in publications use:")
citEntry(entry = "Misc",
         title = "simts: Time Series Simulation",
         author = c(person("Justin", "Lee"),
                    person("James", "Balamuta"),
                    person("Stephane", "Guerrier"),
                    person("Wenchao", "Yang")),
         year = year,  
         howpublished = note,
         note = "GitHub repository: \\url{https://github.com/SMAC-Group/simts}",
         url = "https://cran.r-project.org/package=gmwm",
         textVersion =
           paste0("Justin Lee, James Balamuta, Stephane Guerrier, ",
                  "and Wenchao Yang (",
                  year,
                  "). simts: Time Series Simulation. ",
                  note, ". GitHub repository: https://github.com/SMAC-Group/simts")
)